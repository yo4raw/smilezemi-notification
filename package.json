{
  "name": "smilezemi-notification",
  "version": "1.0.0",
  "description": "スマイルゼミ みまもるネット 自動クローリング & LINE通知",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose up",
    "docker:dev": "docker-compose run --rm crawler",
    "install:browsers": "npx playwright install chromium --with-deps",
    "validate:env": "node scripts/validate-env.js",
    "validate:security": "bash scripts/validate-security.sh",
    "validate:all": "npm run validate:env && npm run validate:security",
    "test:docker": "bash scripts/test-docker.sh"
  },
  "keywords": [
    "smile-zemi",
    "crawler",
    "line-notify",
    "github-actions"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "playwright": "1.40.0"
  },
  "devDependencies": {
    "dotenv": "^17.2.3"
  }
}
